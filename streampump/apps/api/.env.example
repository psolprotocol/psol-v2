# StreamPump API Environment

# Database
DATABASE_URL=postgresql://streampump:streampump@localhost:5432/streampump?schema=public
REDIS_URL=redis://localhost:6379

# Bags.fm API
BAGS_API_KEY=your-bags-api-key
BAGS_API_URL=https://api.bags.fm

# Solana RPC
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta

# Twitch (for token verification)
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret

# API Configuration
API_PORT=3001
API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# Auth Secrets
NEXTAUTH_SECRET=your-secret-here
OVERLAY_TOKEN_SECRET=your-overlay-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Platform Fee
PLATFORM_WALLET_PUBKEY=
PLATFORM_FEE_BPS=0

# Optional: Sentry
SENTRY_DSN=
SENTRY_ENABLED=false

# Environment
NODE_ENV=development
