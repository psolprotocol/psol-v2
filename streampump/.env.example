# ===========================================
# StreamPump Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# Database (Required)
# ===========================================
DATABASE_URL="postgresql://streampump:streampump@localhost:5432/streampump?schema=public"
REDIS_URL="redis://localhost:6379"

# ===========================================
# Bags.fm API (Required for token launches)
# ===========================================
# Get your API key from https://bags.fm/developers
BAGS_API_KEY=""
BAGS_API_URL="https://api.bags.fm"

# ===========================================
# Solana RPC (Required)
# ===========================================
# Use Helius, QuickNode, or any Solana RPC provider
# For devnet testing: https://api.devnet.solana.com
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
SOLANA_NETWORK="mainnet-beta"

# ===========================================
# Twitch OAuth (Required for viewer authentication)
# ===========================================
# Create an app at https://dev.twitch.tv/console
TWITCH_CLIENT_ID=""
TWITCH_CLIENT_SECRET=""

# ===========================================
# NextAuth Configuration (Required)
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=""
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# API Configuration
# ===========================================
API_PORT=3001
API_URL="http://localhost:3001"
CORS_ORIGIN="http://localhost:3000"

# ===========================================
# Session Configuration
# ===========================================
# Secret for signing overlay tokens
OVERLAY_TOKEN_SECRET=""

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Optional: Sentry Error Tracking
# ===========================================
SENTRY_DSN=""
SENTRY_ENABLED="false"

# ===========================================
# Optional: AWS S3 for Image Storage
# ===========================================
# Leave empty to use local storage in development
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# ===========================================
# Optional: Platform Fee Configuration
# ===========================================
# Platform wallet to receive fees (if any)
PLATFORM_WALLET_PUBKEY=""
PLATFORM_FEE_BPS="0"
