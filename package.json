{
  "name": "psol-v2-complete",
  "version": "2.0.0",
  "description": "pSOL v2 Multi-Asset Shielded Pool - Complete Package",
  "private": true,
  "workspaces": [
    "sdk",
    "relayer"
  ],
  "scripts": {
    "build": "npm run build:program && npm run build:circuits && npm run build:sdk && npm run build:relayer",
    "build:program": "anchor build",
    "build:circuits": "bash scripts/compile-circuits.sh",
    "build:sdk": "cd sdk && npm run build",
    "build:relayer": "cd relayer && npm run build",
    "test": "anchor test",
    "test:sdk": "cd sdk && npm test",
    "test:e2e": "ts-mocha -p tests/tsconfig.json tests/**/*.ts --timeout 120000 --exit",
    "test:e2e:merkle": "ts-mocha -p tests/tsconfig.json tests/**/*.ts --grep 'SDK Merkle Tree' --timeout 60000 --exit",
    "test:ci": "npm run test:e2e",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet",
    "setup": "npm install && cd sdk && npm install && cd ../relayer && npm install",
    "ceremony": "bash scripts/trusted-setup.sh",
    "generate-constants": "node scripts/generate-poseidon-constants.js"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/spl-token": "^0.4.6",
    "@solana/web3.js": "^1.91.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "chai": "^4.3.10",
    "circomlibjs": "^0.1.7",
    "mocha": "^10.2.0",
    "snarkjs": "^0.7.3",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/psol-protocol/psol-v2"
  },
  "license": "MIT"
}
